<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
  <id>blotter</id>
  <formats>
    <format>zip</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>${project.basedir}/conf</directory>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/scripts</directory>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source> ${project.build.directory}/conf/logback.xml</source>
      <outputDirectory>./conf</outputDirectory>
      <filtered>false</filtered>
    </file>
    <file>
      <source> ${project.build.directory}/conf/countries.json</source>
      <outputDirectory>./conf</outputDirectory>
      <filtered>false</filtered>
    </file>
    <file>
      <source>${project.basedir}/src/scripts/start.bat</source>
      <outputDirectory>./scripts</outputDirectory>
      <filtered>false</filtered>
    </file>
    <file>
      <source>${project.basedir}/src/main/resources/keystore.p12</source>
      <outputDirectory>./conf</outputDirectory>
      <filtered>false</filtered>
    </file>
  </files>
  <componentDescriptors>
    <componentDescriptor>src/assembly/component.xml</componentDescriptor>
  </componentDescriptors>
  <dependencySets>
    <dependencySet>
      <outputDirectory>/lib</outputDirectory>
      <includes>
        <include>*:*</include>
      </includes>
    </dependencySet>
  </dependencySets>
</assembly>